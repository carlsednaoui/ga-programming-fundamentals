source 'https://rubygems.org'

gem 'rails', '3.2.8'
gem 'jquery-rails'
gem 'heroku'

group :development, :test do
        gem 'sqlite3'
        gem 'sqlite3-ruby'
end

group :production do
        gem 'pg'
        gem 'thin'
end

# Gems used only for assets and not required in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end